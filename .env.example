# ============================================
# SERVER CONFIGURATION
# ============================================
PORT=3000
NODE_ENV="development"
LOG_LEVEL="info"

# ============================================
# DATABASE CONFIGURATION
# ============================================
# Format: postgresql://USER:PASSWORD@HOST:PORT/DATABASE?schema=SCHEMA_NAME
# Note: URL encode special characters in password (e.g., @ becomes %40)
# Using schema-based architecture - each module has its own schema
DATABASE_URL="postgresql://postgres:yourpassword@localhost:5432/expense_tracker?schema=public"

# ============================================
# AUTHENTICATION & SECURITY
# ============================================
# Generate secure JWT secret: openssl rand -base64 32
JWT_SECRET="super-secret-key-change-me"
JWT_EXPIRES_IN="7d"
REFRESH_TOKEN_EXPIRES_IN="30d"

# Password hashing (bcrypt rounds)
BCRYPT_ROUNDS=10

# ============================================
# FILE STORAGE
# ============================================
# Options: "local" | "s3" | "cloudinary"
STORAGE_PROVIDER="local"

# Local Storage
LOCAL_STORAGE_PATH="./uploads"

# AWS S3 (if using S3)
# AWS_ACCESS_KEY_ID=""
# AWS_SECRET_ACCESS_KEY=""
# AWS_REGION="us-east-1"
# S3_BUCKET_NAME=""

# Cloudinary (if using Cloudinary)
# CLOUDINARY_CLOUD_NAME=""
# CLOUDINARY_API_KEY=""
# CLOUDINARY_API_SECRET=""

# ============================================
# EMAIL SERVICE (Future Phase)
# ============================================
# SMTP_HOST="smtp.gmail.com"
# SMTP_PORT=587
# SMTP_USER=""
# SMTP_PASSWORD=""
# EMAIL_FROM="noreply@expense-tracker.com"

# ============================================
# WORKER & BACKGROUND JOBS
# ============================================
# Redis for queue management
REDIS_URL="redis://localhost:6379"

# Outbox polling interval (milliseconds)
OUTBOX_POLL_INTERVAL=5000

# ============================================
# CORS & SECURITY
# ============================================
# Frontend URL for CORS (comma-separated for multiple origins)
FRONTEND_URL="http://localhost:3001"

# Rate limiting
RATE_LIMIT_MAX=100
RATE_LIMIT_TIMEWINDOW="15m"

# ============================================
# OCR SERVICE (Future Phase)
# ============================================
# OCR_PROVIDER="aws-textract" | "google-vision" | "tesseract"
# AWS_TEXTRACT_REGION=""
# GOOGLE_VISION_KEY=""
